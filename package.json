{
  "name": "@essensys/claude-patterns",
  "version": "1.0.0",
  "description": "Strategy-driven architecture patterns and evaluation framework for AI-assisted development",
  "main": "evaluation/dist/index.js",
  "types": "evaluation/dist/index.d.ts",
  "scripts": {
    "build": "cd evaluation && tsc",
    "test": "cd evaluation && jest",
    "test:watch": "cd evaluation && jest --watch",
    "benchmark": "jest benchmarks/ --verbose",
    "benchmark:ddd": "jest benchmarks/ddd-aggregates",
    "benchmark:cqrs": "jest benchmarks/cqrs",
    "benchmark:all": "jest benchmarks/",
    "benchmark:compare": "jest benchmarks/ --testNamePattern='version comparison'",
    "lint": "eslint . --ext .ts",
    "type-check": "cd evaluation && tsc --noEmit",
    "evaluate": "node evaluation/dist/cli.js",
    "validate-patterns": "node scripts/validate-patterns.js",
    "validate:commands": "ts-node scripts/validate-command-handlers.ts",
    "validate:queries": "ts-node scripts/validate-query-handlers.ts",
    "validate:aggregates": "ts-node scripts/validate-aggregates.ts",
    "validate:value-objects": "ts-node scripts/validate-value-objects.ts",
    "validate:projectors": "ts-node scripts/validate-projectors.ts",
    "validate:all": "ts-node scripts/validate-all.ts"
  },
  "keywords": [
    "architecture",
    "patterns",
    "ddd",
    "cqrs",
    "evaluation",
    "llm",
    "ai-assisted-development",
    "code-quality"
  ],
  "author": "essensys",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "glob": "^10.3.10",
    "yaml": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/essensys/claude-code-governance.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
